<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="bigbank.web"/>
	<bean name="/listAccounts1.html" class="bigbank.web.ListAccountsScenario1">
		<constructor-arg ref="bankServiceScenario1"/>
	</bean>
	<bean name="/listAccounts2.html" class="bigbank.web.ListAccountsScenario2">
		<constructor-arg ref="bankServiceScenario2"/>
	</bean>
	
	<bean name="/postscenario2.html" class="bigbank.web.PostAccountsScenario2">
		<constructor-arg ref="bankServiceScenario2"/>
	</bean>
	
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".zul"/>
	</bean>

</beans>