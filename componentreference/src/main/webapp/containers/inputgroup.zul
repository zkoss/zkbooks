<zk xmlns:h="native">
    <h:h1>Basic Usages</h:h1>
    <h:h3>Simple Input with Symbol After</h:h3>
    <inputgroup>
        @<textbox />
    </inputgroup>

    <h:h3>Username with Domain</h:h3>
    <inputgroup>
        <textbox placeholder="Recipient's username"/>@example.com
    </inputgroup>

    <h:h3>Currency Input</h:h3>
    <inputgroup>
        $<textbox/>.00
    </inputgroup>

    <h:h3>Checkbox with Input</h:h3>
    <inputgroup>
        <checkbox/><textbox/>
    </inputgroup>

    <h:h3>Multiline Textbox</h:h3>
    <inputgroup>
        With textarea
        <textbox multiline="true" rows="5" cols="30"/>
    </inputgroup>
    <h:h1>Multiple inputs</h:h1>
    <inputgroup>
        First and last name<textbox/><textbox/>
    </inputgroup>

    <h:h1>Multiple addons</h:h1>
    <inputgroup>
        <label value="$"/>0.00<textbox/>
    </inputgroup>
    <h:h1>Button addons</h:h1>
    <inputgroup>
        <button label="button"/><textbox/>
    </inputgroup>
    <h:h1>Button Group</h:h1>
    <inputgroup>
        <button label="Left"/>
        <button label="Middle"/>
        <button label="Right"/>
    </inputgroup>

    <inputgroup>
        Options<combobox/>
    </inputgroup>

    <h:h1>Orient : vertical</h:h1>

    <inputgroup orient="vertical">
        <button label="Button"/>
        <button label="Button"/>
        <button label="Button"/>
        <button label="Button"/>
    </inputgroup>
    <!-- ref https://getbootstrap.com/docs/5.2/forms/input-group/ -->
</zk>